<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MaxBackup.Views.SettingsWindow"
        Title="Settings"
        Width="400" Height="300">
    <StackPanel Margin="20">
        <TextBlock Text="Settings" FontSize="20" Margin="0 0 0 10"/>

        <TextBlock Text="Choose Theme:" Margin="0 0 0 5"/>
        <ComboBox Items="{Binding AvailableThemes}"
                  SelectedItem="{Binding SelectedTheme}"
                  Width="200">
        </ComboBox>

        <Button Content="Apply" Command="{Binding ApplyThemeCommand}" Width="100" Margin="0 10"/>
    </StackPanel>
</Window>
