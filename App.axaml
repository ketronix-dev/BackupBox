<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BackupBox.App"
             xmlns:fluent="clr-namespace:Avalonia.Themes.Fluent;assembly=Avalonia.Themes.Fluent"
             RequestedThemeVariant="Light">
             
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/avalonia-logo.ico" 
                      ToolTipText="BackupBox still running in background">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <!-- Використовуємо підписку на подію Click замість прив'язки команди -->
                        <NativeMenuItem Header="Quit" Click="OnQuitClicked" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

    <Application.Styles>
        <fluent:FluentTheme/>
    </Application.Styles>
</Application>
